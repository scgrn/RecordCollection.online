<body class="d-flex flex-column h-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">

<%- include('./partials/header'); %>

                <div class="row mb-4">
                    <a href="/home"><i class="fa-solid fa-left-long"></i> Home</a>
                </div>

                <p><h4>Trouble logging in?</h4></p>
                <p>Enter your username or email address below and we'll send a recovery link.</p>

                <form id="recoveryForm">
                    <div>
                        <label for="loginUsername">
                            <i class="fa-solid fa-circle-question"></i>
                        </label>
                        <input type="text" name="query" placeholder="Username or email address" id="query" autocomplete="off" required>
                    </div>
                    <br/>
                    <div>
                        <input type="submit" class="btn btn-primary btn-sm" value="Send link"">
                    </div>
                </form>
            </div>
        </div>
    </div>

